<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mx-auto w-full md:w-1/3 mt-10 px-12">
    <div class="w-full mb-2">
      <div class="flex items-center">
        <i class='ml-3 fill-current text-gray-400 text-xs z-10'></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', placeholder: "Email", class: "px-8 w-full border rounded py-2 text-gray-700 focus:outline-none" %>
      </div>

      <div class="w-full mb-2">
        <div class="flex items-center">
          <i class='ml-3 fill-current text-gray-400 text-xs z-10'></i>
          <%= f.password_field :password, placeholder: "Password", class: "px-8 w-full border rounded px-3 py-2 text-gray-700 focus:outline-none mt-2" %>
        </div>
      </div>

        <% if devise_mapping.rememberable? %>
          <div class="field px-4 py-2">
            <%= f.check_box :remember_me, class: "focus:outline-none border-blue-400 focus-within:border-blue-500" %>
            <%= f.label :remember_me, class: "w-full rounded py-2 dark:text-gray-200 focus:outline-none mt-2" %>
          </div>
        <% end %>

      <%= f.submit "Sign in", class: 'flex w-full py-2 rounded-full bg-blue-400 hover:bg-blue-500 dark:text-gray-100 focus:outline-none' %>
      <% end %>
  </div>
</div>
