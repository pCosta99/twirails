<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mx-auto w-full md:w-1/3 mt-10 px-12">
    <div class="w-full mb-2">
      <div class="flex items-center">
        <i class='fill-current text-gray-400 text-xs z-10'></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', placeholder: "Email", class: "w-full border rounded py-2 text-gray-700 focus:outline-none" %>
      </div>
    </div>

      <div class="w-full mb-2">
        <div class="flex flex-col items-center">
          <%#<%= f.label :password %>
          <i class='ml-3 fill-current text-gray-400 text-xs z-10'></i>
            <% if @minimum_password_length %>
              <em class="dark:text-gray-200">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "px-8 w-full border rounded px-3 py-2 text-gray-700 focus:outline-none mt-2" %>
        </div>
      </div>

      <div class="w-full mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "px-8 w-full border rounded px-3 py-2 text-gray-700 focus:outline-none mt-2" %>
      </div>

      <%= f.submit "Sign up", class: 'flex w-full py-2 rounded-full bg-blue-400 hover:bg-blue-500 dark:text-gray-100 focus:outline-none' %>
      <% end %>
  </div>
</div>
