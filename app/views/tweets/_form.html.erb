<%= form_with model: [user, tweet] do |form| %>
  <%= form.text_area :body, placeholder: 'Which customer do you want to complain about?', class: 'bg-transparent block w-full text-gray-200 focus:outline-none', rows: tweet.body.nil? ? 4 : [10, tweet.body.chars.count {|c| c == '\n'}].max %>
  <div class="flex justify-between">
    <div></div>
    <div></div>
    <%= form.submit "Tweet",  class: 'rounded-lg px-4 bg-blue-400 hover:bg-blue-500' %>
  </div>
<% end %>
